    <None Remove="Legal\License\LICENSE_zh-CN.md" />
    <None Remove="Legal\License\LICENSE_zh.md" />
    <None Remove="Legal\TermsAndConditions.en.md" />
    <None Remove="Localization\Translations\en.json" />
    <None Remove="Localization\Translations\es.json" />
    <None Remove="Localization\Translations\fr.json" />
    <None Remove="Localization\Translations\he.json" />
    <None Remove="Localization\Translations\hi.json" />
    <None Remove="Localization\Translations\pt-BR.json" />
    <None Remove="Localization\Translations\pt.json" />
    <None Remove="Localization\Translations\ru.json" />
    <None Remove="Localization\Translations\zh-cn.json" />
    <None Remove="Localization\Translations\zh.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Legal\License\LICENSE_pt.md" />
    <EmbeddedResource Include="Legal\License\LICENSE_pt-BR.md" />
    <EmbeddedResource Include="Legal\License\LICENSE_es.md" />
    <EmbeddedResource Include="Legal\License\LICENSE_he.md" />
