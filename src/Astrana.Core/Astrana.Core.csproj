<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageProjectUrl>https://www.astrana.org</PackageProjectUrl>
    <RepositoryUrl>https://github.com/astrana-project/astrana-core</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <NeutralLanguage>en</NeutralLanguage>
    <AssemblyVersion>0.1.0</AssemblyVersion>
    <FileVersion>0.1.0</FileVersion>
    <GenerateDocumentationFile>False</GenerateDocumentationFile>
    <SignAssembly>False</SignAssembly>
    <Company>Astrana</Company>
    <Copyright>https://www.astrana.org/copyright</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Legal\License\LICENSE_en.md" />
